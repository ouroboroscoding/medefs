{
	"__mysql__": {
		"auto_primary": "UUID()",
		"create": ["_created", "memo_id", "type", "escalate", "claims_max"],
		"db": "mems",
		"host": "primary",
		"indexes": {
			"memo_id": {"unique": null}
		},
		"table": "csr_agent"
	},

	"__name__": "CSR_Agent",

	"_id": {
		"__type__":"uuid",
		"__optional__": true,
		"__react__": {
			"title": "ID"
		}
	},

	"_created": {
		"__type__":"timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP"
		}
	},

	"memo_id": {
		"__type__":"int",
		"__react__": {
			"title": "Memo ID"
		}
	},

	"type": {
		"__type__": "string",
		"__options__": ["agent", "pa"],
		"__react__": {
			"type": "select",
			"options": [["agent", "Agent"], ["pa", "Provider Assistant"]]
		},
		"__sql__": {
			"opts": "default 'agent'"
		}
	},

	"escalate": {
		"__type__": "bool",
		"__react__": {
			"title": "Allow Escalation to this Agent"
		},
		"__sql__": {
			"opts": "default 0"
		}
	},

	"claims_max": {
		"__type__": "uint",
		"__maximum__": 50,
		"__sql__": {
			"type": "tinyint unsigned"
		},
		"__react__": {
			"title": "Maximum self-claims"
		}
	}
}
