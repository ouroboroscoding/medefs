{
	"__mysql__": {
		"auto_primary": "UUID()",
		"changes": ["user"],
		"create": ["_created", "_updated", "customer", "label",
					"full_name", "address1", "address2", "city",
					"division", "country", "postalCode"],
		"db": "mems",
		"host": "primary",
		"indexes": {
			"ui_customer_label": {"unique": ["customer", "label"]}
		},
		"primary": "_id",
		"table": "customers_address"
	},

	"__name__": "Customers_Address",

	"_id": {
		"__type__": "uuid",
		"__optional__": true
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP"
		}
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"customer": {
		"__type__": "uuid"
	},

	"label": {
		"__type__": "string",
		"__maximum__": 15
	},

	"full_name": {
		"__type__": "string",
		"__maximum__": 95,
	},

	"address1": {
		"__type__": "string",
		"__minimum__": 5,
		"__maximum__": 31
	},

	"address2": {
		"__type__": "string",
		"__maximum__": 31,
		"__optional__": true
	},

	"city": {
		"__type__": "string",
		"__maximum__": 31
	},

	"division": {
		"__type__": "string",
		"__regex__": "[A-Z]{2}"
	},

	"country": {
		"__type__": "string",
		"__options__": ["US"]
	}
}
