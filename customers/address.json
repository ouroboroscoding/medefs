{
	"__mysql__": {
		"auto_primary": "UUID()",
		"changes": ["user"],
		"create": ["_created", "_updated", "customer", "active", "label",
					"full_name", "address1", "address2", "city",
					"division", "country", "postalCode"],
		"db": "mems",
		"host": "primary",
		"indexes": {
			"ui_customer_label": {"unique": ["customer", "label"]}
		},
		"primary": "_id",
		"table": "customers_address",
		"charset": "utf8",
		"collate": "utf8_general_ci"
	},

	"__name__": "Customers_Address",

	"_id": {
		"__type__": "uuid",
		"__optional__": true
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP"
		}
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"customer": {
		"__type__": "uuid"
	},

	"active": {
		"__type__": "bool"
	},

	"label": {
		"__type__": "string",
		"__maximum__": 39,
		"__react__": {
			"title": "Label",
			"maximum": 20
		}
	},

	"full_name": {
		"__type__": "string",
		"_optional_": true,
		"__maximum__": 95,
		"__react__": {
			"title": "Full Name (optional)"
		}
	},

	"address1": {
		"__type__": "string",
		"__minimum__": 5,
		"__maximum__": 31,
		"__react__": {
			"title": "Address"
		}
	},

	"address2": {
		"__type__": "string",
		"__maximum__": 31,
		"__optional__": true,
		"__react__": {
			"title": "Suite / Apt"
		}
	},

	"city": {
		"__type__": "string",
		"__maximum__": 31
	},

	"division": {
		"__type__": "string",
		"__optional__": true,
		"__regex__": "[A-Z]{2}",
		"__sql__": {
			"type": "char(2)"
		}
	},

	"country": {
		"__type__": "string",
		"__sql__": {
			"type": "char(2)"
		}
	},

	"postalCode": {
		"__type__": "string",
		"__maximum__": 10,
		"__react__": {
			"title": "Zip/Postal Code"
		}
	}
}
