		}
	},

	"_updated": {
		"__type__":"timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"campaign_id": {
		"__type__": "uint"
	},

	"name": {
		"__type__": "string",
		"__maximum__": "31"
